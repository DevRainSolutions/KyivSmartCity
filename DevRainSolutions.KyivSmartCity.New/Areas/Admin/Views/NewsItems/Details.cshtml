@model DevRainSolutions.KyivSmartCity.New.Models.NewsItem

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>NewsItem</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">DatePublished</div>
    <div class="display-field">@String.Format("{0:g}", Model.DatePublished)</div>

    <div class="display-label">IsPublished</div>
    <div class="display-field">@Model.IsPublished</div>

    <div class="display-label">Image</div>
    <div class="display-field">@Model.Image</div>

    <div class="display-label">Body</div>
    <div class="display-field">@Model.Body</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


