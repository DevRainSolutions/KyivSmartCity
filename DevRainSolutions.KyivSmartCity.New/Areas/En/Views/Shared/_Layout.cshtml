@using DevRainSolutions.KyivSmartCity.New.Models
@{
    string title = ViewBag.Title + " - Kyiv Smart City";
    var image = ViewBag.OgImage ?? Url.ContentAbsUrl("~/Images/main-top-bg.jpg");
    var description = ViewBag.Description ?? "Що об’єднує такі міста як Відень, Торонто, Париж, Нью-Йорк, Лондон, Токіо, Берлін, Копенгаген, Гонконг та Барселона? Усі – належать до ТОП-10 «розумних» міст планети. Вони активно застосовують інформаційно-комунікаційні технології аби більш ефективно використовувати ресурси, зберігати енергію, підвищувати якість життя мешканців, зменшувати негативний вплив на навколишнє середовище та підтримувати інновації. Чи потрапить до переліку Smart cities Київ? Все залежить від тебе!";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kyiv Smart City</title>
    <meta http-equiv="Content-Language" content="uk-UA">
    <meta name="Description" content="@description" />
    <meta name="Keywords" content="смарт сіті, розумне місто, Київ, електронний уряд, smartcity" scheme="" />
    <meta property="og:title" content="@title" />
    <meta property="og:url" content="@Request.Url" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="@description" />
    <meta property="og:image" content="@image" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript" src="/Scripts/social-likes.min.js"></script>
    <link rel="stylesheet" href="/Content/social-likes_birman.css" />

    <script>
        $(document).ready(function () {
            $("#check").click(function () {
                if ($(this).is(':checked')) {
                    $("#submit-button").removeAttr('disabled');
                } else {
                    $("#submit-button").attr('disabled', 'disabled');
                }
            });
        });
    </script>

</head>
<body>
    <div class="navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand"><img src="/Images/logo.png" style="height: 20px" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Team", "Index", "Team")</li>*@
                    <li>@Html.ActionLink("Groups", "Index", "Groups", null, new {area="En"})</li>
                    <li>@Html.ActionLink("Hackathon", "Hackathon", "Home", null, new { area = "En" })</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Українська <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Home", new{area=""})">Українська</a></li>
                            <li><a href="@Url.Action("Index", "Home", new{area="En"})">English</a></li>
                        </ul>
                    </li>
               </ul>
            </div>
        </div>

    </div>


    @if (ViewBag.IsMain != null)
    {
        <div class="jumbotron" style="background: url('/Images/hack-bg.jpg') 100%; background-size: cover">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <h1 style="color: white">Kyiv Smart City Hackathon</h1>
                        <p class="lead">
                            The goal – to gather under the same roof the talented people, concerned about the future of Kyiv city. The mission of the Hackathon Project is development of the services and mobile applications on the basis of the open data and API of the city with purpose to improve the life of Kyiviens and to promote the development of Kyiv as “smart city”. </p>
                        <p>
                            <a href="http://goo.gl/forms/MjQSGcTHiX" target="_blank" rel="nofollow" class="btn btn-danger btn-lg">Register</a>
                            <a href="@Url.Action("Hackathon", "Home", new{area="En"})" style="font-size: 70%; color: lightgrey">Learn more</a>
                        </p>
                    </div>
                </div>

               

                @*
    <h1 style="color: white">Kyiv Smart City</h1>
    <p class="lead">Що об’єднує такі міста як Відень, Торонто, Париж, Нью-Йорк, Лондон, Токіо, Берлін, Копенгаген, Гонконг та Барселона? Усі – належать до ТОП-10 «розумних» міст планети. Вони активно застосовують інформаційно-комунікаційні технології аби більш ефективно використовувати ресурси, зберігати енергію, підвищувати якість життя мешканців, зменшувати негативний вплив на навколишнє середовище та підтримувати інновації. Чи потрапить до переліку Smart cities Київ? Все залежить від тебе!</p>
    <p>
        <a href="@Url.Action("Join", "Home")" class="btn btn-primary btn-lg">Долучитись до проекту &raquo;</a>
    </p>*@
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            @Html.Partial("_Footer")
        </div>
    }
    else
    {
        <div class="container body-content" style="border-top: 1px solid #eee;">
            @RenderBody()
            @Html.Partial("_Footer")
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Html.Partial("_Feedback")
    @Html.Partial("_GoogleAnalytics")
</body>
</html>

