@model IEnumerable<DevRainSolutions.KyivSmartCity.New.Models.Group>
@{
    ViewBag.Title = "Groups";
}

<h2>@ViewBag.Title</h2>


<div class="row" style="margin-top: 40px;">

    @foreach (var i in Model)
    {
        <div class="col-md-6">
            <h3>@i.Title</h3>
            <p>
                @i.Description
            </p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Details", "Groups", new{id=i.Id})">Learn more &raquo;</a>
            </p>
        </div>
    }

</div>