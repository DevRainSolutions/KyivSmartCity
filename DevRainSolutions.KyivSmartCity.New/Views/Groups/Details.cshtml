@using System.Activities.Statements
@using System.Globalization
@using MarkdownDeep
@model DevRainSolutions.KyivSmartCity.New.Models.Group
@{
    ViewBag.Title = Model.Title;
    ViewBag.Description = Model.Description;
    var md = new Markdown { SafeMode = false, ExtraMode = true };
    var count = 1;
    var count2 = 1;
}


<div class="row">
    <div class="col-md-8">

        <h2>@ViewBag.Title</h2>

        <p class="subheader">@Model.Description</p>

        <div class="text-block fs16" style="margin-top: 20px;">


            <ul class="nav nav-tabs">
                <li class="active"><a href="#home" data-toggle="tab">Про групу</a></li>
                <li><a href="#team" data-toggle="tab">Команда</a></li>
                <li><a href="#docs" data-toggle="tab">Документи</a></li>
            </ul>


            <div class="tab-content">
                <div class="tab-pane fade in active" id="home">
                    <div style="margin-top: 10px;">
                        @Html.Raw(md.Transform(Model.Body))
                    </div>
                </div>
                <div class="tab-pane fade" id="team">

                    <table class="table table-hover" style="margin-top: 10px;">
                        <tbody>
                            <tr>
                                <th>#</th>
                                <th>ПІП</th>
                                <th>Інформація</th>
                            </tr>
                            @foreach (var i in Model.Experts.OrderBy(i => i.Title))
                            {
                                <tr>
                                    <td>@(count++)</td>
                                    <td>
                                        @i.Title
                                    </td>
                                    <td>
                                        @i.Description
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>

                </div>
                <div class="tab-pane fade" id="docs">
                    @if (!Model.Documents.Any())
                    {
                        <p style="margin-top: 10px;">
                            Немає документів.
                        </p>
                    }
                    else
                    {
                        <table class="table table-hover" style="margin-top: 10px;">
                            <tbody>
                                <tr>
                                    <th>#</th>
                                    <th>Опис</th>
                                    <th>Дії</th>
                                </tr>
                                @foreach (var i in Model.Documents.OrderBy(i => i.Title))
                                {
                                    <tr>
                                        <td>@(count2++)</td>
                                        <td>
                                            @i.Title
                                        </td>
                                        <td>
                                            <a href="@i.Description" target="_blank">Переглянути</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }

                </div>
            </div>


        </div>

        @Html.Partial("_Disqus")

    </div>

    <div class="col-md-4" style="margin-top: 20px;">


        <h4>Координатор групи</h4>

        <p class="round big">
            <img src="@Model.TeamMember.ImageUrl" />
        </p>
        <h3>
            @Model.TeamMember.Name
        </h3>

        <p>
            @Model.TeamMember.Description
        </p>
        <p>

            @if (!string.IsNullOrWhiteSpace(Model.TeamMember.Email))
            {
                <span><a href="@Model.TeamMember.Email">@Model.TeamMember.Email</a></span>
            }
        </p>
    </div>
</div>
